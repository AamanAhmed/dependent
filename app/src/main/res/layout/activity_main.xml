<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Department"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Department Name"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Department"
        android:layout_margin="24dp"
        android:id="@+id/departmentname"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter No. of Employees"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:textSize="22sp"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter No. of Employees"
        android:text="0"
        android:layout_margin="24dp"
        android:id="@+id/employeeno"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:text="Add"
        android:id="@+id/departmentbtn"/>

</LinearLayout>